//****************************************************************************
int note_time (double note, double duration_ms)
{
	double duration_int = ((duration_ms*1000)/(note*2));
	for(counter_cycles=1; counter_cycles<=duration_int; counter_cycles++)
	{
		PORTC|=(1<<PC0);
		_delay_us(note);
		PORTC&=~(1<<PC0);
		_delay_us(note);
	}
	return 0;
}

