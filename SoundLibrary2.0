//****************************************************************************
int note_time (double note, double duration_ms)
{
	double duration_int = ((duration_ms*1000)/(note*2));
	for(counter_cycles=1; counter_cycles<=duration_int; counter_cycles++)
	{
		PORTC|=(1<<PC0);
		_delay_us(note);
		PORTC&=~(1<<PC0);
		_delay_us(note);
	}
	return 0;
}


//*****************************************************************************
int Songoftime()
{	
	while (Songoftime_notes[arr_count]!= 999)
	{
		note_time(Songoftime_notes[arr_count],Songoftime_notes[arr_count+1]);
		arr_count=arr_count+2;
		_delay_ms(Songoftime_notes[arr_count]);
		arr_count++;
		counter_notes++;
		if(counter_notes>=2)
		{
			if (PORTA==0)
			{
				PORTA=1;
			}
			else
			{
				PORTA=(PORTA*2)+1;
			}
			counter_notes=0;
		}
	}
	PORTA = 0;
	counter_notes=0;
	arr_count=0;	
	return 0;
}

