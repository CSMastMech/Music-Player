		 counter_notes=0;
		 Playlist();
	 }
	 
	 bandera2=0;
	 return 0;
 }

//Welcome message function
void welcomemessage(){
	PORTB |= (1<<PB7);		//Turns light of the LCD display on
	s=0;					//set counter of songs to zero
	curs=0;					//set cursor to zero
	rem_instr=0;
	lcd_gotoxy(2,0);		//Writes the welcome message and after 1,3s shows the palylist 
	lcd_puts("Welcome");
	_delay_ms(1000);
	lcd_clrscr();
	_delay_ms(300);
	Playlist();
	bandera=0;
	
}

// Stop function
void stop(){
	_delay_ms(50);		//Set values to zero 
	bandera=0;
	s=0;
	curs=0;
	Playlist();			//shows playlist
	PORTA = 0;			//If the song was stopped it turns LED's off
	arr_count=0;		//set the progress of the song to zero
}

//Previous button function 
void prevbut(){
	s--;			//counter of the song is decreased
	
	if(s<=0)		//set the minimum value that the counter can reach
	s=0;
	
	if (s%2 == 0)	//set the value of the cursor (0 or 1)
	curs=0;
	else
	curs=1;
	
	Playlist();		//shows playlist
	
	PORTA = 0;		//If the song was stopped it turns LED's off
	arr_count=0;	//set the progress of the song to zero
	bandera=0;		//after everything is done set the flag to zero so a new value of "rem_inst" can be set in the interruption
}

 void nextbut(){
	
	s++;			//counter of the song is increased by one
	
	if(s>=4)		//set the maximum limit that the counter can reach
	s=4;
	
	if (s%2 == 0)	//set the value of the cursor
	curs=0;
	else
	curs=1;
	
	PORTA = 0;		//If the song was stopped it turns LED's off
	arr_count=0;	//set the progress of the song to zero
		
	Playlist();		//shows playlist
	
	bandera=0;		//after everything is done set the flag to zero so a new value of "rem_inst" can be set in the interruption
 }

//Playlist function
void Playlist(){
	
		lcd_clrscr();					//Draws the cursor
		lcd_gotoxy(0,curs);
		lcd_puts("->");
	
	if (s<=1)							//Drawing of the first two songs
	{	
		lcd_gotoxy(2,0);
		lcd_puts("Song of Time");
		lcd_gotoxy(2,1);
		lcd_puts("Song of Storms");
	}
	
	if (s>=2 && s<=3)					//Drawing of the third and fourth songs
	{	
		lcd_gotoxy(2,0);
		lcd_puts("Super Mario Bros");
		lcd_gotoxy(2,1);
		lcd_puts("Bloody Tears");
	}
	
	if (s==4)							//Drawing of the fifth song
	{	
		lcd_gotoxy(2,0);
		lcd_puts("Donkey Kong");
	}
	
}

void ok(){
	
	bandera=0;							//Sets the flag to zero, so the interruption can be done once again inside the song
	lcd_clrscr();
	
	switch (s){							//Switch case of the songs in order to the counter variable "s" setted prevously whit the next and prev buttons
		
		case 0:							
		lcd_gotoxy(2,0);				//Song name
		lcd_puts("Song of Time");
		lcd_gotoxy(2,1);
		lcd_puts("Zelda");				//Videogame name of the song
		Songoftime();					//Song
		break;
		
		case 1:
		lcd_gotoxy(2,0);
		lcd_puts("Song of Storms");
		lcd_gotoxy(2,1);
		lcd_puts("Zelda");
		Songofstorms();
		break;
		
		case 2:
		lcd_gotoxy(2,0);
		lcd_puts("Main Theme");
		lcd_gotoxy(2,1);
		lcd_puts("Super Mario Bros");
		SuperMarioBros();
		break;
		
		case 3:
		lcd_gotoxy(2,0);
		lcd_puts("Bloddy Tears");
		lcd_gotoxy(2,1);
		lcd_puts("Castlevania");
		Bloodytears();
		break;
		
		case 4:
		lcd_gotoxy(2,0);
		lcd_puts("Main Theme");
		lcd_gotoxy(2,1);
		lcd_puts("Donkey Kong");
		DonkeyKong();
		break;
		
	}
	
	pause=0;						//if the song was paused and interrupted the flag "pause" 
	repr=0;							// the flag that shows that the song is playing is now set to zero
}

void InitBoard(void){
	
	//PORTC set to outputs
	DDRC = 0xFF;
	
	//PORTD  set to inputs
	DDRD=0b00000000;
	
	//PORTD set to outputs
	PORTD=0xFF;
	DDRA = 0xFF;
	DDRB = 0xFF;
}


int main(void)
{
	
	MCUCR |=  (1<ISC10);

	// Set Time Counter Mode to Normal
	TCCR1A &= ~(1<<WGM10);
	TCCR1A &= ~(1<<WGM11);
	TCCR1B &= ~(1<<WGM12);
	TCCR1B &= ~(1<<WGM13);

	//Input Capture detecting the rising edge
	TCCR1B |= (1 << ICES1);

	// Setting the prescaler to 8
	TCCR1B |=  (1<<CS11);

	// Disable Input Capture Interrupt
	TIMSK |= (1<<TICIE1);

	// Setting PORTD as Input
	//DDRD=0;

	//Set external interruption INT0
	GICR = 1<<INT0;
	MCUCR= 1<<ISC00;

	
	sei();// enable interrupts
	
	InitBoard();
	lcd_init(LCD_DISP_ON);
	
	while(1){
		
		
		if (rem_instr==66){			
			on=1;					//Flag to turn on the Player
			welcomemessage();		//Welcome message
		}
		
		while (on==1)				//When the Player is turned on the while loop of the cases is on until the flag "on" is set to zero
		{
			
			switch (rem_instr)		//Switch case for the different values of gotten by the remote controller
			{
				case 67:			//Case of the next button
				pause=0;
				
				if(bandera==1)
				nextbut();
				
				rem_instr=0;
				break;
				
				case 68:			//case of the previous button
				pause=0;
				if(bandera==1)
				prevbut();
				rem_instr=0;
				bandera=0;			//the flag "bandera" is turned off, so a new instruction can be gotten from the remote controller
				break;
				
				case 74:			//case of the stop button
				pause=0;
				if(bandera==1)
				stop();
				rem_instr=0;
				bandera=0;			//the flag "bandera" is turned off, so a new instruction can be gotten from the remote controller
				break;
				
				case 66:			//case of the on/off button
				pause=0;
				rem_instr=0;
				PORTA = 0;
				arr_count=0;	
				if(bandera==1)
				on=0;
				lcd_clrscr();		//clear of the LCD
				PORTB &= (0<<PB7);	//turning off the light of the LCD
				_delay_ms(500);
				bandera=0;			//the flag "bandera" is turned off, so a new instruction can be gotten from the remote controller
				break;		
				
				case 64:			//Case of the OK button
				if(bandera==1)
				ok();
				rem_instr=0;
				bandera=0;			//the flag "bandera" is turned off, so a new instruction can be gotten from the remote controller
				break;
			
			}
			
		}
	}
}

//External interruption
ISR(INT0_vect){
	
	//the interruption simulate an "ON/OFF" press of the remote controller
	rem_instr=66;
	bandera=1;
	
	//If the song is being reproduced the second flag is turned on so it can get out of the song cycle 
	if ( repr==1)
	bandera2=1;
	
	_delay_ms(300);
		
}

ISR(TIMER1_CAPT_vect){
	
	//Calculating the time between two rising edges
	Start = ICR1; //Timestamp of the first rising edge
	time_diff = Start-Stop; // Time between two rising edges
	Stop = ICR1; // Storing the timestamp of the first rising edge
	
	if(time_diff<=300 && bandera == 0){ //filtering only important times

		capture_count++; //Counting the input captures

		if(capture_count<26){ //getting the first 25 important numbers
			difference_storage[capture_count-1]=time_diff;
		}
		else{ //processing the difference_storage array
			rem_instr=0; // setting the instruction to zero
			for(uint8_t help_count=16; help_count<24;help_count++){ // deciding if it is a zero or one
				if(difference_storage[help_count]>200){
					rem_instr |= (1<<(help_count-16));
				}
				else{
					rem_instr &= ~(1<<(help_count-16));
				}
			}
			
			
			//if any of the buttons is pressed the flag of "instruction received" is turned on
			if(rem_instr==67 || rem_instr==68 || rem_instr==74 || rem_instr==66 || rem_instr==64)
			bandera=1;
			
			//if any of the buttons are pressed it set the correspondig flag on
			if (rem_instr==64 && repr==1)
			pause=1;
			else if ((rem_instr==67 || rem_instr==68 || rem_instr==74 || rem_instr==66) && repr==1)
			bandera2=1;
			
			capture_count = 0;
			
			_delay_ms(500);
		}
	}
	
}

// rem_instr values
// ok = 64
// next =  67
// previous = 68
// on/off =66
// stop = 74
