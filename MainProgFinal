 	while (DonkeyKong_notes[arr_count]!= 999 && pause==0 && bandera2==0)
 	{
 		note_time(DonkeyKong_notes[arr_count],DonkeyKong_notes[arr_count+1]);
 		arr_count=arr_count+2;
 		_delay_ms(DonkeyKong_notes[arr_count]);
 		arr_count++;
 		counter_notes++;
 		if(counter_notes>=6)
 		{
			PORTA=(PORTA*2)+1;
 			counter_notes=0;
 		}
 	}
 	
	 switch(rem_instr){
		 
		 case 67:
		 nextbut();
		 break;
		 
		 case 68:
		 prevbut();
		 break;
		 
		 case 74:
		 stop();
		 break;
		 
		 case 66:
		 on=0;
		 PORTA=0;
		 arr_count=0;
		 lcd_clrscr();
		 PORTB &= (0<<PB7);
		 _delay_ms(500);
		 break;
	 }
	 
	 
	 if (pause==0 && bandera2==0)
